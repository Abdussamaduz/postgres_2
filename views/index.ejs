<%- include('parts/header') %>

    <section class="pt-4 mt-4">
        <div class="container">
            <h1 class="display-2 text-center">Users</h1>
            <form class="my-4 py-4 row" action="/" method="POST">
                <label class="col-4">
                    <input class="form-control" type="text" name="name" required placeholder="Name">
                </label>
                <label class="col-4">
                    <input class="form-control" type="number" name="age" required placeholder="age">
                </label>
                <label class="col-4">
                    <select name="referal" class="form-select">
                        <% for(let referal of referals) { %>
                            <option value="<%= referal.referal_id%>">
                                <%= referal.referal_name%>
                            </option>
                            <% } %>
                    </select>
                </label>
                <button class="btn col-12 btn-success mt-4">Add user</button>
            </form>
            <table class="mt-4 table w-100 fs-1 table-stiped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>#id</th>
                        <th>name</th>
                        <th>age</th>
                        <th>Target</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let user of users){ %>
                        <tr>
                            <td>
                                <%= user?.user_id %>
                            </td>
                            <td class="d-flex justify-content-between align-items-center">
                                <%= user?.user_name %>
                                    <div class="btns">
                                        <a href="/delete/<%= user?.user_id %>" type="submit"
                                            class="btn btu mx-4 btn-danger">del</a>
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                            data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap">edit</button>

                                        <div class="modal fade" id="exampleModal" tabindex="-1"
                                            aria-labelledby="exampleModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="exampleModalLabel">New message</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                            aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form>
                                                            <div class="form-floating mb-4 w-100 fs-5">
                                                                <input type="text" name="name" class="form-control w-100" id="floatingInput" placeholder="name@example.com">
                                                                <label for="floatingInput">name</label>
                                                              </div>
                                                              <div class="form-floating mb-3 fs-5">
                                                                <input type="number" name="age" class="form-control" id="floatingPassword" placeholder="Age">
                                                                <label for="floatingPassword">Age</label>
                                                              </div>
                                                        </form>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                            data-bs-dismiss="modal">Close</button>
                                                        <a href="/update/<%=user?.user_id%>" type="button" class="btn btn-primary">edit</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                            </td>
                            <td>
                                <%= user?.user_age%>
                            </td>
                            <td>
                                <%= user?.referal_name%>
                            </td>
                        </tr>
                        <% } %>

                </tbody>
            </table>
        </div>
    </section>

    <%- include('parts/footer') %>